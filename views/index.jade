extends ../public/views/layout

block header
    div(id="header")
        .navbar.navbar-inverse.navbar-fixed-top
            .container
                .navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li
                            a(href="/" id="headerTitle") Austin-Didier Tran
                        li
