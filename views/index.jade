block footer
    div(id="footer")
        hr
        div(class="col-md-9")
            span(class="footer")
                img(ng-src="Pictures/Footer/phone.png" class="icon")
                span 819 580-2378
            span(class="footer")
                img(ng-src="Pictures/Footer/mail.png" class="icon")
                span tran.austin.didier@gmail.com
        div(class="col-md-3")
                a(ng-repeat="social in socials" href="{{social.link}}")
