doctype
html(ng-app="app")
    head
        title Austin-Didier Tran
        link(rel="stylesheet", href="/css/site.css")
        link(rel="stylesheet", href="/vendor/bootstrap/dist/css/bootstrap.css")
        base(href="/")
    body(ng-controller="mainController as mainCtrl")
        div(id="content")
            div(class="row")
                div(class="col-md-8")
                    a(href="/")
                        h1 Austin-Didier Tran
                div(class="col-md-4")
                    a(ng-repeat="social in socials" href="{{social.link}}")
                        img(ng-src="{{social.picture}}" class="social")
            div(class="row")
            ul(class="nav nav-pills red" role="tablist")
                li(ng-repeat="tab in tabs" ng-class="{active:mainCtrl.isSelected(tab.ID)}")
                    a(href="/{{tab.name}}" ng-click="mainCtrl.selectTab(tab.ID)") {{tab.value}}
            block main-content
            div
                span(class="footer" ng-repeat="information in footer | orderBy:'ID'")
                    img(ng-src="{{information.picture}}" class="icon")
                    {{information.content}}
            script(type="text/javascript", src="/vendor/angular/angular.js")
            script(type="text/javascript", src="/vendor/angular-route/angular-route.js")
            script(type="text/javascript", src="/vendor/angular-resource/angular-resource.js")
            script(type="text/javascript", src="/app/app.js")
            script(type="text/javascript", src="/vendor/jquery/dist/jquery.js")
            script(type="text/javascript", src="/vendor/bootstrap/dist/js/bootstrap.js")
            